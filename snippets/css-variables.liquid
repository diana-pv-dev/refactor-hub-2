<style>
	{% comment %} Shopify fonts {% endcomment %}

	{% liquid
		if settings.font_heading == 'shopify'
			echo settings.font_heading_shopify | font_face

			for font in settings.font_heading_shopify.variants
				unless font == settings.font_heading_shopify
					echo font | font_face: font_display: 'swap'
				endunless
			endfor
		endif

		if settings.font_body == 'shopify'
			echo settings.font_body_shopify | font_face

			for font in settings.font_body_shopify.variants
				unless font == settings.font_body_shopify
					echo font | font_face: font_display: 'swap'
				endunless
			endfor
		endif
	 %}

	{% comment %} Custom fonts {% endcomment %}

  {% if settings.font_heading == 'futura-pt' or settings.font_body == 'futura-pt' %}
      @font-face {
        font-family: 'Futura PT';
        src: url({{ 'FuturaPT-Book.ttf' | asset_url }}) format('truetype');
        font-weight: 400;
        font-style: normal;
      }

	    @font-face {
        font-family: 'Futura PT';
        src: url({{ 'FuturaPT-Light.ttf' | asset_url }}) format('truetype');
        font-weight: 300;
        font-style: normal;
        font-display: swap;
      }

      @font-face {
        font-family: 'Futura PT';
        src: url({{ 'FuturaPT-Medium.ttf' | asset_url }}) format('truetype');
        font-weight: 500;
        font-style: normal;
        font-display: swap;
      }

      @font-face {
        font-family: 'Futura PT';
        src: url({{ 'FuturaPT-Bold.ttf' | asset_url }}) format('truetype');
        font-weight: 700;
        font-style: normal;
        font-display: swap;
      }

      @font-face {
        font-family: 'Futura PT';
        src: url({{ 'FuturaPT-ExtraBold.ttf' | asset_url }}) format('truetype');
        font-weight: 800;
        font-style: normal;
        font-display: swap;
      }

      @font-face {
        font-family: 'Futura PT';
        src: url({{ 'FuturaPT-Heavy.ttf' | asset_url }}) format('truetype');
        font-weight: 900;
        font-style: normal;
        font-display: swap;
      }
    {% endif %}

	{% comment %} CSS variables {% endcomment %}

    :root {
        --color-background: {{ settings.color_background }};
        --color-text: {{ settings.color_text }};
        --color-heading: {{ settings.color_heading }};
        --color-link: {{ settings.color_link }};

    {% case settings.font_heading %}
			{% when 'shopify' %}
		        --font-heading: {{ settings.font_heading_shopify.family }}, {{ settings.font_heading.fallback_families }};
			{% when 'futura-pt' %}
		        --font-heading: 'Futura PT', sans-serif;
		{% endcase %}

		{% case settings.font_body %}
			{% when 'shopify' %}
		        --font-body: {{ settings.font_body_shopify.family }}, {{ settings.font_body.fallback_families }};
			{% when 'futura-pt' %}
		        --font-body: 'Futura PT', sans-serif;
		{% endcase %}
    }
</style>
